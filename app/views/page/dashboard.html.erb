<div class="row">
  <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
    <div class="mb-3 main-card mt-4 card text-white" style="background-color: rgb(51, 51, 51); border-color: rgb(51, 51, 51);">
      <div class="card-header"><%= @featured_paper.title %></div>
      <div class="card-body">
        <em><h5 class="text-white card-title">Featured Paper</h5></em>
        <p style="width: 50%;">
          <%= @featured_paper.abstract %>
        </p>
      </div>
      <div class="card-footer">
        <%= link_to 'Read More', paper_path(@featured_paper) %>
      </div>
    </div>
    <div class="main-card mb-3 card">
      <div class="card-body">
        <h5 class="card-title" style="padding-bottom: 1em;"><%= link_to 'Messages', conversations_path %></h5>
        <ul class="list-group">
          <% @last_conversations.each do |conversation| %>
            <li class='list-group-item'>
              <p class='list-group-item-heading'><%= conversation.partner(current_user.id).name %></p>
              <em><p class='list-group-item-text'><%= conversation.messages.last.content %></p></em>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
    <div class="main-card mb-3 card mt-4">

      <div class="card-body">


        <h1 style="font-family: 'Lobster', cursive;">
          <%= current_user.name %>
        </h1>
        <h3>
          Researcher
        </h3>
        <h5>
          <%= current_user.institute.name %>
        </h5>
        <strong>Email :</strong> <%= current_user.email %>
        <br>
        <strong>Phone Number:</strong>
        <% current_user.phone_numbers.each do |phn| %>
            <%= phn %>&nbsp;&nbsp;
        <%end %>
        <br>
        <strong>Interests:</strong>
        <ul>
          <% current_user.interests.each do |intr| %>
            <li>
              <%= intr %>
            </li>
          <%end %>
        </ul>
        <strong>Education:</strong>
        <ul>
          <% current_user.education.each do |edu| %>
            <li>
              <%= edu[2] %> - <%= edu[0] %> at <%= edu[1] %>
            </li>
          <%end %>
        </ul>
        <strong>Achievements:</strong>
        <ul>
          <% current_user.achievements.each do |ach| %>
            <li>
              (<%= ach[1] %>) - <%= ach[0] %>
            </li>
            <%end %>
        </ul>
      </div>
    </div>
  </div>
</div>
