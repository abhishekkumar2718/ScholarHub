<div class="main-card mb-3 card mt-4">
  <div class="card-body">
    <div class="card-title" style="padding-top: 78px;padding-left: 6em;">
      Forgot your password?
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field row w1">
        <div class="col-lg-1 col-md-1"></div>
        <div class="control-label col-lg-3 col-md-3 col-sm-4 col-xs-12">
          <%= f.label :email %>
        </div>
        <div class="input-group col-lg-7 col-md-7 col-sm-8 col-xs-12">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

      </div>

      <div class="actions row w1">
        <div class="col-lg-1 col-md-1"></div>
        <%= f.submit "Send me reset password instructions",class:"mb-2 mr-2  btn btn-primary" %>
      </div>
    <% end %>

    <div style="padding-left: 6em;padding-bottom: 77px;">
      <%= render "devise/shared/links" %>
    </div>


  </div>
</div>

<h2></h2>


