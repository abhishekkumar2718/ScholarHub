<div class="main-card mb-3 card mt-4">
  <div class="card-body">
    <div class="card-title" style="padding-top: 78px;padding-left: 6em;">
      Sign up
    </div>
    <div class="card-subtitle" style="padding-left: 6em;">
      Work and accomplish goals together!
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field row w1">
        <div class="col-lg-1 col-md-1"></div>
        <div class="control-label col-lg-3 col-md-3 col-sm-4 col-xs-12">
          <%= f.label :email %>
        </div>
        <div class="input-group col-lg-7 col-md-7 col-sm-8 col-xs-12">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"  %>
        </div>
      </div>

      <div class="field row w1">
        <div class="col-lg-1 col-md-1"></div>
        <div class="control-label col-lg-3 col-md-3 col-sm-4 col-xs-12">
          <%= f.label :name %>
        </div>
        <div class="input-group col-lg-7 col-md-7 col-sm-8 col-xs-12">
          <%= f.text_field :name, class:"form-control"  %>
        </div>
      </div>

      <div class="field row w1">
        <div class="col-lg-1 col-md-1"></div>
        <div class="control-label col-lg-3 col-md-3 col-sm-4 col-xs-12">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br/>
        </div>
        <div class="input-group col-lg-7 col-md-7 col-sm-8 col-xs-12">
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control"  %>
        </div>
      </div>

      <div class="field row w1">
        <div class="col-lg-1 col-md-1"></div>
        <div class="control-label col-lg-3 col-md-3 col-sm-4 col-xs-12">
          <%= f.label :password_confirmation %>
        </div>
        <div class="input-group col-lg-7 col-md-7 col-sm-8 col-xs-12">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control"  %>
        </div>
      </div>

      <div class="field row w1">
        <div class="col-lg-1 col-md-1"></div>
        <div class="control-label col-lg-3 col-md-3 col-sm-4 col-xs-12">
          <%= f.label :institute_id, 'Current Institute' %><br/>
        </div>
        <div class="input-group col-lg-7 col-md-7 col-sm-8 col-xs-12">
          <%= f.collection_select :institute_id, Institute.all, :id, :name, prompt: true, class:"form-control"  %>
        </div>
      </div>
      <div class="field row w1">
        <div class="col-lg-1 col-md-1"></div>
        <div class="control-label col-lg-3 col-md-3 col-sm-4 col-xs-12">
          <%= f.label :degree_id, 'Current Degree' %>
        </div>
        <div class="input-group col-lg-7 col-md-7 col-sm-8 col-xs-12">
          <%= f.collection_select :degree_id, Degree.all, :id, :name, prompt: true,, {:class=>'my-custom-class'}  %>
        </div>
      </div>

      <div class="field row w1">
        <div class="col-lg-1 col-md-1"></div>
        <div class="control-label col-lg-3 col-md-3 col-sm-4 col-xs-12">
          <%= f.label :branch_id, 'Branch' %>
        </div>
        <div class="input-group col-lg-7 col-md-7 col-sm-8 col-xs-12">
          <%= f.collection_select :branch_id, Branch.all, :id, :name, prompt: true, class:"mb-2 form-control"  %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:'mb-2 mr-2  btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>



