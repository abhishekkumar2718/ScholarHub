<p id="notice"><%= notice %></p>
<div class="main-card mb-3 card mt-4">
  <div class="card-header">
    <div class="card-title">
      Papers
    </div>
  </div>
  <div class="card-body">

    <table>
      <thead>
      <tr>
        <th>User</th>
        <th>Journal link</th>
        <th>Institute</th>
        <th>Fields</th>
        <th>Abstract</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @papers.each do |paper| %>
        <tr>
          <td><%= paper.user %></td>
          <td><%= paper.journal_link %></td>
          <td><%= paper.institute %></td>
          <td><%= paper.fields %></td>
          <td><%= paper.abstract %></td>
          <td><%= link_to 'Show', paper, class: "mb-2 mr-2  btn btn-info"  %></td>
          <td><%= link_to 'Edit', edit_paper_path(paper), class: "mb-2 mr-2 btn-transition btn btn-outline-warning"  %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


<%= link_to 'New Paper', new_paper_path %>
