<%= form_with(model: collaboration, local: true) do |form| %>
  <% if collaboration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(collaboration.errors.count, "error") %> prohibited this collaboration from being saved:</h2>

      <ul>
        <% collaboration.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field w1 row">
    <div class="col-lg-1 col-md-1"></div>

  </div>

  <div class="field w1 row">
    <div class="col-lg-1 col-md-1"></div>
    <div class="control-label col-lg-3 col-md-3 col-sm-4 col-xs-12">
      <%= form.label :title %>
    </div>
    <div class="input-group col-lg-7 col-md-7 col-sm-8 col-xs-12">
      <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="field w1 row">
    <div class="col-lg-1 col-md-1"></div>
    <div class="control-label col-lg-3 col-md-3 col-sm-4 col-xs-12">
      <%= form.label :description %>
    </div>
    <div class="input-group col-lg-7 col-md-7 col-sm-8 col-xs-12">
      <%= form.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="field w1 row">
    <div class="col-lg-1 col-md-1"></div>
      <div class="control-label col-lg-3 col-md-3 col-sm-4 col-xs-12">
        <%= form.label :fields %><br />
        <em>Seperate multiple fields using semi-colon</em>
      </div>

    <div class="input-group col-lg-7 col-md-7 col-sm-8 col-xs-12">
      <%= form.text_area :fields, class: "form-control", value: collaboration.fields.join('; ') %>
    </div>
  </div>

  <div class="actions row">
    <div class="col-lg-1 col-md-1"></div>
    <%= form.submit 'Submit Request', :class => 'mb-2 mr-2  btn btn-success' %>
  </div>
<% end %>
